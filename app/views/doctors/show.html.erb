Name: <%= @doctor.name %><br>
Specialty: <%= @doctor.specialty %><br>
University: <%= @doctor.university %><br>
Hospital: <%= @doctor.hospital.name %><br>

<div id="patients">
  <% @doctor.patients.each do |patient| %>
    <div id="patient_id-<%= patient.id %>">
      <%= patient.name %>
      <%= button_to "Delete", doctor_patient_path(@doctor, patient), method: :delete %>
    </div>
  <% end %>
</div>